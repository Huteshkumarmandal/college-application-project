<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Teacher">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logoutin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:fontFamily="sans-serif-condensed"
            android:src="@drawable/logout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="STUDENT RECORD MIS"
            android:textColor="#787878"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/stylesheet2"
            android:layout_marginTop="40dp"
            android:src="@drawable/user_avitar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:padding="20dp"
            android:text="you have been registered as-:"
            android:textColor="#787878"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/emailin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:padding="20dp"
            android:text="email"
            android:drawableLeft="@drawable/baseline_email_24"
            android:textColor="#787878"
            android:textSize="20dp" />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="#A39D9D" />

        <TextView
            android:id="@+id/depin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:padding="20dp"
            android:text="department"
            android:drawableLeft="@drawable/department"
            android:textColor="#787878"
            android:textSize="20dp" />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="#A39D9D" />

        <TextView
            android:id="@+id/rolein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:padding="20dp"
            android:text="role"
            android:drawableLeft="@drawable/role"
            android:textColor="#787878"
            android:textSize="20dp" />


        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="#A39D9D" />
        <TextView
            android:id="@+id/joinedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-condensed"
            android:padding="20dp"
            android:text="joined"
            android:drawableLeft="@drawable/baseline_calendar_today_24"
            android:textStyle="bold"
            android:textColor="#CE00084A"
            android:textSize="18dp" />
    </LinearLayout>
</ScrollView>